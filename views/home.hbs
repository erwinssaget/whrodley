{{!< default }}

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-11 col-xl-9">
      <div class="row pt-4">
        {{#each courses}}
        <div class="col-lg-6">
          <div class="card card-project">

            <div class="card-body">
              <div class="card-title">
                <a href="/courses/{{ this.id }}/">
                  <h5>{{ this.name }}</h5>
                </a>
              </div>
              <p>
                There are {{ this.students.length }} students here.
              </p>
              <div class="card-meta d-flex justify-content-between">
                <div class="d-flex align-items-center">
                  <i class="material-icons mr-1">settings_phone</i>
                  <span class="text-small">{{ this.friendly_phone_number }}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
