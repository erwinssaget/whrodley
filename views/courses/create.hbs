{{!< default }}

<form action="/teams" method="POST">
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <div>
    <label for="name" class="block text-sm font-medium leading-5 text-gray-700">Team Name</label>
    <div class="mt-1 relative rounded-md shadow-sm">
      <input id="name" name="name" class="form-input block w-full sm:text-sm sm:leading-5" />
    </div>
    <p class="mt-2 text-sm text-gray-500">This is the name of your team (or business).</p>
  </div>

  <div id="sms-number-picker"></div>

  <button type="submit">Submit</button>
</form>
